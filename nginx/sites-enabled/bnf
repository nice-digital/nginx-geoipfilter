upstream bnf-live {
    server #{bnf-host-1};
    server #{bnf-host-2};
}
server {
    listen 80;
    server_name #{bnf-server-name};
    access_log /var/log/nginx/bnf.log proxy_log;
    set $geo_redirect https://www.nice.org.uk/bnf-uk-only;
    set $upstream http://bnf-live;

    include /etc/nginx/geoip/geoip;
}
